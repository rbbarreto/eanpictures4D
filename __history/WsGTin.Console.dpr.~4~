program WsGTin.Console;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils,
  System.JSON,
  Horse,
  Horse.Jhonson,
  Horse.OctetStream;


var
  App : THorse;

begin
  App := THorse.Create;

  App.Get('/ping',
    procedure(Req: THorseRequest; Res: THorseResponse; Next: TProc)
    begin
      Res.Send('pong').Status(200);
    end);

    App.Listen(9000);



end.
